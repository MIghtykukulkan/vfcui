<div class="panel panel-primary">
<div class="panel-heading"> Vendor details </div>
</div>
  <form class="form-horizontal">

      <div class="form-group">
      <label class="control-label col-sm-2" >First Name:</label>
      <div class="col-sm-10">
          {{input type="text" class="form-control" id="fname" placeholder="first name"}}
       
      </div>
    </div>


    <div class="form-group">
      <label class="control-label col-sm-2">Last name:</label>
      <div class="col-sm-10">
          {{input type="text" class="form-control" id="lname" placeholder="last name"}}
       
      </div>
    </div>
    
    <div class="form-group">
      <label class="control-label col-sm-2">Password:</label>
      <div class="col-sm-10">
          {{input type="password" class="form-control" id="password" placeholder="Password"}}
       </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2">Conform Password:</label>
      <div class="col-sm-10">
          {{input type="password" class="form-control" id="conformpassword" placeholder="Conform Password"}}
       </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2"  >Email:</label>
      <div class="col-sm-10">        
          {{input type="email" class="form-control"  placeholder="Email"}}  
      </div>
    </div>

    <div class="panel panel-primary">
<div class="panel-heading"> Vendor bank details </div>
</div>

    <div class="form-group">
      <label class="control-label col-sm-2">Account Number:</label>
