{{!--{{partial 'steplist'}}--}}
<div class="layout layout-align-center-center slider-container">
        <div flex=10 class="layout flex-10 layout-align-center-center">
          <span>Progress</span>
        </div>
        {{paper-slider class="flex" discrete=true value=currentStep step=1 min=1 max=9 onChange=(action (mut rating1))}}
 </div>

{{#paper-stepper vertical=false alternative=true  currentStep=currentStep onStepChange=(action (mut currentStep))
  onStepperCompleted=(action "saveModel") as |stepper|}}
    {{models-table data=model columns=columns }}
  {{#stepper.step label="Select Vendor" stepNumber=1 as |step|}}
    {{#step.body}}
      {{partial "step2"}}
    {{/step.body}}
  {{#step.actions as |nextStep previousStep|}}
     {{!-- {{#paper-button primary=true raised=true onClick=(action 'nextStep')}}
        Continue
      {{/paper-button}} --}}
      {{#paper-button onClick=(action 'previousStep')}}
        Back
      {{/paper-button}}
    {{/step.actions}}
  {{/stepper.step}}

{{#stepper.step label="purchase Order" as |step|}}
    {{#step.body}}
      
    {{partial "step4"}}

    {{/step.body}}
    {{#step.actions as |nextStep previousStep|}}
        {{#paper-button primary=true raised=true onClick=(action 'poupload')}}
        Submit
      {{/paper-button}}

        {{#paper-button primary=true raised=true onClick=(action 'nextStep')}}
        Approve Invoice
      {{/paper-button}}
    
    {{/step.actions}}
  {{/stepper.step}}

 {{#stepper.step label="approve Invoice" as |step|}}
    {{#step.body}}
           {{partial 'step6'}}
    {{/step.body}}
    {{#step.actions as |nextStep previousStep|}}
     {{!-- {{#paper-button primary=true raised=true onClick=(action 'nextStep')}}
        Continue
      {{/paper-button}}--}}
      {{#paper-button onClick=(action 'previousStep')}}
        Back
      {{/paper-button}}
    {{/step.actions}}
  {{/stepper.step}}
  {{/paper-stepper}}

 

